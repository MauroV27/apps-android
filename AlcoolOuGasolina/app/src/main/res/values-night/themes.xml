<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AlcoolOuGasolina" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azul_escuro</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">@color/azul_escuro</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/verde_escuro</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/azul_escuro</item>

        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:background">@color/azul_escuro</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="android:backgroundTint">@color/azul_escuro</item>
    </style>

    <style name="MYStyle">
        <item name="background">@color/black_2</item>
        <item name="backgroundColor">@color/black_2</item>
        <item name="android:backgroundTint">@color/black_2</item>
    </style>
</resources>