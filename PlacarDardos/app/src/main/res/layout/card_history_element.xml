<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardElevation="8dp"
    app:layout_constrainedHeight="true"
    app:layout_constraintHeight_max="96dp"
    app:layout_constraintHeight_min="96dp">

    <LinearLayout
        android:id="@+id/inCell"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:clipToPadding="true"
        android:minHeight="96dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/img_description"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:maxWidth="80dp"
            android:maxHeight="80dp"
            android:minWidth="40dp"
            android:minHeight="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_darts_bullet" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_gravity="fill_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Inferno android:text="Player A vs PLayer B" -->

                <TextView
                    android:id="@+id/tvPlayerNames"

                    android:layout_width="233dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:width="120dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tvDayTime"
                    app:layout_constraintHorizontal_bias="0.102"
                    app:layout_constraintStart_toEndOf="@+id/imageView2"
                    app:layout_constraintTop_toBottomOf="@+id/tvPlayerNames"
                    app:layout_constraintVertical_bias="0.384"/>

                <TextView
                    android:id="@+id/tvCardInitScore"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:width="60dp"
                    android:maxWidth="80dp"
                    android:minWidth="40dp"
                    android:textAlignment="viewEnd" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_gravity="fill_horizontal"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvWinTextDescription"
                    android:layout_width="233dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:width="120dp"

                    android:elegantTextHeight="true"
                    android:singleLine="true"
                    android:textAlignment="viewStart"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tvDayTime"
                    app:layout_constraintHorizontal_bias="0.102"
                    app:layout_constraintStart_toEndOf="@+id/imageView2"
                    app:layout_constraintTop_toBottomOf="@+id/tvPlayerNames"
                    app:layout_constraintVertical_bias="0.384" />

                <TextView
                    android:id="@+id/tvDateGame"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:width="60dp"
                    android:maxWidth="80dp"
                    android:minWidth="40dp"

                    android:textAlignment="viewEnd" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>